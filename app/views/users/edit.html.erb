<% provide(:title, "Edit user") %>
<div id="user-update-page">
	<h1> Update your profile </h1>
	<div id="user-update-form">
		
			<%= form_for(@user) do |f| %>
			<%= render 'shared/error_messages' %>
					<p><%= f.label :name %>
					<p><%= f.text_field :name %>
					<p><%= f.label :email %>
					<p><%= f.text_field :email %>
					<p><%= f.label :password %>
					<p><%= f.password_field :password %>
					<p><%= f.label :password_confirmation, "Confirm Password" %>
					<p><%= f.password_field :password_confirmation %>
					<p><%= f.submit "Update" , class: "btn btn-primary" %>
			<% end %>
		
	</div>
</div>